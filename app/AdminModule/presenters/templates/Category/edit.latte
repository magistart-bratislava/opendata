{block content}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">Upraviť kategóriu</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a n:href="Dashboard:">Home</a></li>
                    <li class="breadcrumb-item"><a n:href="Category:">Kategórie</a></li>
                    <li class="breadcrumb-item active">Upraviť kategóriu</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-6">
                <!-- general form elements -->
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Upraviť kategóriu</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    {form editForm}
                        <div class="card-body">
                            <ul class="errors" n:if="$form->hasErrors()">
                                <li n:foreach="$form->errors as $error">{$error}</li>
                            </ul>
                            <div class="form-group">
                                <label for="name_sk">Názov SK</label>
                                <input type="text" class="form-control" n:name="name_sk" id="name_sk" placeholder="Zadajte názov">
                            </div>
                            <div class="form-group">
                                <label for="name_en">Názov EN</label>
                                <input type="text" class="form-control" n:name="name_en" id="name_en" placeholder="Zadajte názov">
                            </div>
                            <div class="form-group">
                                <label for="slug">URL názov</label>
                                <input type="text" class="form-control" n:name="slug" id="slug" placeholder="Zadajte URL názov">
                            </div>
                        </div>
                        <!-- /.card-body -->

                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">Upraviť</button>
                        </div>
                    {/form}
                </div>
            </div>
        </div>
    </div>
</section>
<script>
    $(function () {
        $("#name_sk").change(function() {
            $("#slug").val(url_slug($(this).val()));
        });
    });
</script>
