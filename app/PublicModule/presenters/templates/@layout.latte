<script src="https://unpkg.com/leaflet@1.5.1/dist/leaflet.js" integrity="sha512-GffPMF3RvMeYyc1LWMHtK8EbPv0iNZ8/oTtHPx9/cc2ILxQ+u905qIwdpULaqDkyBKgOaB57QTMg7ztg8Jm2Og==" crossorigin=""></script>

<script>
	var last_dataset_showed = 6;
	var last_powerbi_showed = 6;
	var last_map_showed = 6;
	function showMore(id)
	{
		if ( id == 'newest_datasets_' )
		{
			last_dataset_showed = last_dataset_showed+4;
			for (var i=1;i<=last_dataset_showed;i++)
				$( '#'+id+i ).show("slow");
		}
		else if ( id == 'newest_powerbi_' )
		{
			last_powerbi_showed = last_powerbi_showed+4;
			for (var i=1;i<=last_powerbi_showed;i++)
				$( '#'+id+i ).show("slow");
		}
		else if ( id == 'newest_maps_' )
		{
			last_map_showed = last_map_showed+4;
			for (var i=1;i<=last_map_showed;i++)
				$( '#'+id+i ).show("slow");
		}

		return false;
	}

</script>

</body>
</html>