<body>

<header class="top-header">
	<div class="container">
		<div class="row">
		
			<div class="col-sm-3 col-xs-12 header-logo">

				<a n:href="Homepage:"><img src="{$basePath}/img/logo.png?v=1.02" alt="logo"></a>
			</div>

			<div class="col-sm-9 col-xs-12">
			<p class="blink-position">{_ui.uz} <span class="blink_me">{$total_dataset_files}</span> {_ui.files}!
			<a n:href="this locale=>en" class="locale"><img class="flag-english" src="{$basePath}/img/flag_english_color.png"></a>
			<a n:href="this locale=>sk" class="locale"><img class="flag-slovak" src="{$basePath}/img/flag_slovak_color.png"></a>
			</p>
				<a class="onlineba-logo" n:href="Onlinedata:" ><img src="{$basePath}/img/onlineba_color{$locale == 'en'?'_en':''}.png" alt="online" class="onlineba"></a>
				<a class="mapyba-logo" n:href="Map:category 'priestorove-udaje'"><img src="{$basePath}/img/mapyba_color{$locale == 'en'?'_en':''}.png" alt="mapy ba" class="mapyba"></a>
				<a class="powerbi-logo" n:href="Powerbi:category 'doprava'"><img src="{$basePath}/img/powerbi_color{$locale == 'en'?'_en':''}.png" alt="power bi" class="powerbi"></a>
				<a class="model3d-logo" n:href="Page:model3d"><img src="{$basePath}/img/model3dba_color.png" alt="3dmodel ba" class="model3d"></a>
				<form n:name="searchForm" action="{link Dataset:search}" class="searchbar" role="search">
					<a class="advanced-search" n:href="Dataset:search">{_search.advanced}</a>
					<div class="input-group add-on">
						<input class="form-control" placeholder="{_search.search}" n:name="search" id="search" type="text">
						<div class="input-group-btn">
							<button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
						</div>
					</div>
				</form>
			</div>

		</div>
	</div>
</header>

{include content}

<!-- news starts here -->
<section  class="news-bottom">
	<div class="container">

		<div class="row" style="margin-left:15px;">

			<div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
				<div class="row">
					<p class="title">{_ui.newest_datasets}</p></div>
				<div class="row">
					<div class="col-xs-1"></div>
					<div class="col-xs-12 border">
					<span n:foreach="$last_dataset as $ldata">
						<div class="row" id="newest_datasets_{$iterator->counter}" {if $iterator->counter > 6}style="display:none;"{/if}><div class="dot"></div><div class="date">{$ldata['date']}</div><div class="col-12 list"><a n:href="Dataset:show $ldata['slug']" class="vimeo">{$ldata[$name_col]}</a></div></div>
					</span>
					</div>
				</div>
				<div class="row"><a href="#" class="button" onclick="return showMore('newest_datasets_');">{_ui.show_more}</a></div>
			</div>


			<div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
				<div class="row">
					<p class="title">{_ui.newest_powerbi}</p></div>
				<div class="row">
					<div class="col-xs-1"></div>
					<div class="col-xs-12 border">
					<span n:foreach="$last_powerbi as $ldata">
						<div class="row" id="newest_powerbi_{$iterator->counter}" {if $iterator->counter > 6}style="display:none;"{/if}><div class="dot"></div><div class="date">{$ldata['date']}</div><div class="col-12 list"><a n:href="Dataset:show $ldata['slug']" class="vimeo">{$ldata[$name_col]}</a></div></div>
					</span>
					</div>
				</div>
				<div class="row"><a href="#" class="button" onclick="return showMore('newest_powerbi_');">{_ui.show_more}</a></div>
			</div>

			<div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
				<div class="row">
					<p class="title">{_ui.newest_maps}</p></div>
				<div class="row">
					<div class="col-xs-1"></div>
					<div class="col-xs-12 border">
					<span n:foreach="$last_map as $ldata">
						<div class="row" id="newest_maps_{$iterator->counter}" {if $iterator->counter > 6}style="display:none;"{/if}><div class="dot"></div><div class="date">{$ldata['date']}</div><div class="col-12 list"><a n:href="Dataset:show $ldata['slug']" class="vimeo">{$ldata[$name_col]}</a></div></div>
					</span>
					</div>
				</div>
				<div class="row"><a href="#" class="button" onclick="return showMore('newest_maps_');">{_ui.show_more}</a></div>
			</div>


		</div>
	</div>
</section><!-- end of news section -->

<!-- footer starts here -->
<footer class="footer clearfix">
	<div class="container">
		<div class="row">
			<div class="col-lg-3 col-md-12 col-sm-12 col-xs-12 footer-para">
				<p>&copy; 2019 Bratislava. All rights reserved.</p>
			</div>
			<div class="col-lg-6 col-md-12 col-sm-12 col-xs-12 footer-text-center">
				<a n:href="Page:Data">{_ui.data_policy}<i class="fa"></i></a>
				<a n:href="Page:licence">{_ui.terms_of_use}<i class="fa"></i></a>
				<a n:href="Page:Gdpr">{_ui.privacy_policy}<i class="fa"></i></a>
				<a n:href="Homepage:Contact">{_ui.contact}<i class="fa"></i></a>
			</div>

			<div class="col-lg-3 col-md-12 col-sm-12 col-xs-12 follow_us">
				<ul>
					<li><a href="#" class="facebook">Facebook</a></li>
					<li><a href="#" class="vimeo">Vimeo</a></li>
					<li><a href="#" class="tumbrl">Tumbrl</a></li>
					<li><a href="#" class="twitter">Twitter</a></li>
					<li><a href="#" class="delicious">Delicious</a></li>
				</ul>

			</div>
		</div>

	</div>
</footer>

<div class="scroll-top"><i class="fa fa-arrow-up"></i></div>

